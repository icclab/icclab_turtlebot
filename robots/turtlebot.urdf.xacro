<?xml version="1.0"?>
<!--
    - Base      : kobuki
    - Stacks    : hexagons
    - 3d Sensor : kinect
-->    
<robot name="turtlebot" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find icclab_turtlebot)/robots/turtlebot_library.urdf.xacro" />
  <xacro:include filename="$(find icclab_turtlebot)/sensors/rplidar.urdf.xacro" />
  <kobuki/>
  <stack_hexagons parent="base_link"/>
  <sensor_kinect  parent="base_link"/>
  <xacro:rplidar name="rplidar" parent="base_link" ros_topic="scan" update_rate="5" ray_count="1040" min_angle="0" max_angle="360">
    <origin xyz="0.1 0 0.33" rpy="3.1415 0 3.1415"/> <!-- laserscan topic is at approx physical height --> 
  </xacro:rplidar>
</robot>
