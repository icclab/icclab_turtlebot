<!-- NOTE: this file is configured for navigation mode on robopatrol -->
<launch>

  <!-- by default do not launch map server -->
  <arg name="launch_map_server" default="false"/>

  <!-- minimal launch -->
  <include file="$(find icclab_turtlebot)/launch/minimal.launch"/>

  <!-- map server -->
  <arg name="map_file" default="$(find icclab_turtlebot)/icclab_latest_map.yaml"/>
  <node if="$(arg launch_map_server)" name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- amcl -->
  <arg name="initial_pose_x" default="0.0"/>
  <arg name="initial_pose_y" default="0.0"/>
  <arg name="initial_pose_a" default="-1.57079632679"/>

  <include file="$(find turtlebot3_navigation)/launch/amcl.launch">
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
  </include>

  <!-- running nodes on robot for webapp gui -->
  <include file="$(find rosnodeinfo)/launch/node_info_publisher.launch"/>

  <!-- text-to-speech -->
  <include file="$(find sound_play)/soundplay_node.launch" />

</launch>
