<launch>

  <!-- Turtlebot 3 -->
  <env name="TURTLEBOT3_MODEL" value="waffle"/>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>

  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_robot.launch"/>

  <!-- Realsense camera -->
  <!--include file="$(find turtlebot3_bringup)/launch/turtlebot3_realsense.launch"/-->

  <!-- Navigation -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch" />

  <arg name="map_file" default="$(find icclab_turtlebot)/icclab_latest_map.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
  </node>

  <!-- Scanse Sweep laser -->
  <!--include file="$(find sweep_ros)/launch/sweep2scan.launch"/-->

  <!-- AMCL -->
  <arg name="initial_pose_x" default="0.0"/>
  <arg name="initial_pose_y" default="0.0"/>
  <arg name="initial_pose_a" default="0.0"/>

  <include file="$(find turtlebot3_navigation)/launch/amcl.launch">
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
  </include>

  <!-- move_base -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />

    <rosparam file="$(find icclab_turtlebot)/param/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find icclab_turtlebot)/param/costmap_common_params_$(arg model)_icclab.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find icclab_turtlebot)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find icclab_turtlebot)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find icclab_turtlebot)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find icclab_turtlebot)/param/dwa_local_planner_params_waffle.yaml" command="load" />
    <rosparam file="$(find icclab_turtlebot)/param/global_planner_params.yaml" command="load" />
   
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
  </node> 

  <!-- Text-to-Speech -->
  <!--include file="$(find sound_play)/soundplay_node.launch" /-->

  <!-- Running Nodes -->
  <!--node pkg="rosnodeinfo" type="nodes.py" name="runningNodes" /-->

</launch>
