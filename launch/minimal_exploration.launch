<!-- MAKE SURE RPLIDAR NODE IS RUNNING -->
<!-- NOTE: this file is configured for exploration mode on robopatrol -->
<launch>

  <arg name="launch_gmapping" default="false"/>

  <!-- minimal launch -->
  <include file="$(find icclab_turtlebot)/launch/minimal.launch"/>
  
  <!-- move_base -->
  <include file="$(find icclab_turtlebot)/launch/move_base.launch">
    <arg name="slam" value="true"/>
  </include>
  
  <!-- running nodes on robot for webapp gui -->
  <include file="$(find rosnodeinfo)/launch/node_info_publisher.launch"/>

  <!-- text-to-speech -->
  <include file="$(find sound_play)/soundplay_node.launch" />

  <!-- gmapping -->
  <include if="$(arg launch_gmapping)" file="$(find icclab_turtlebot)/launch/gmapping_icclab.launch"/>

</launch>

